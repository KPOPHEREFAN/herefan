<div class="hr_with_text"> 
  <hr> <span>or</span> <hr> 
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "dropdown_box_input" %>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "dropdown_box_input"  %>
  </div>
  <div class="left_and_right">
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>   
    </div>
    <div>
       <p style="margin-bottom:5px"><%= link_to "Forgot Password?", new_password_path(resource_name) %></p>  
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", class: "dropdown_box_input"%>
  </div>
<% end %>
<div class="left_only">
  <span>Not a Here Fans user yet?</span>  
  <span>
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </span>
</div>
