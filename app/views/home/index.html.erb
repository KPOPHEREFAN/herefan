<%= render partial: "/layouts/parts/intro" unless user_signed_in?%>



<!-- toy code -->
<div style="background-color:white; position:relative; height: 1000px;">
	<div id="asdf">
<%= render partial: "/layouts/svgs/logo", locals: {w: 500, h: 500}%>
	</div>
</div>
<style>
	#asdf{
		display:inline-block;position:absolute;top:50%;left:50%;cursor:pointer;
		transform: translate(-50%, -50%) scale(1);
	}
</style>
<script>
	i = 1
	w = $("#asdf").width()
	h = $("#asdf").height()
	w2 = $("#asdf").width()
	h2 = $("#asdf").height()
	$("#asdf").click(function(e){
		x = -w/2-(e.pageX-$(this).offset().left-w2/2)*4
		y = -h/2-(e.pageY-$(this).offset().top-h2/2)*4
		i = i*4
		if(i==64){
			i = 1
			w2 = w*i
			h2 = h*i
			result = "translate(-50%, -50%)"+" scale("+i+")"
			$(this).css("transition", "none")
			$(this).css("transform", result)
		}
		else{
			w2 = w*i
			h2 = h*i
			result = "translate("+x+"px, "+y+"px)"+" scale(" + i + ")"
			$(this).css("transition", "0.5s")
			$(this).css("transform", result)
			}
		})
</script>