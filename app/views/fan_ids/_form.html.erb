<div>
    <%= form_for fan_id do |f| %>
        <%= f.hidden_field :fandom_id, required: "true" %>
        <div></div>
        <div class="JEditToggler">
            <p><%= fan_id.nickname %></p>
            <%= f.text_field :nickname, class: "hidden", required: "true" %>
            <a>edit</a>            
        </div>
        <%= f.submit "Continue" %>
    <% end %>
</div>
<div>
    <% fandoms.each do |fandom| %>
        <div class="JSelectId" obj_id="<%= fandom.id %>" target_input_obj="#fan_id_fandom_id">
            <div></div>
            <p><%= fandom.name %></p>
        </div>
    <% end %>
</div>